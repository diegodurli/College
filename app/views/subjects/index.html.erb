
<%= render 'subjects_chart' %>

<div id='subjects_chart'></div><br/><br/>

<table class="table table-striped table-bordered table-condensed">
	<thead>
    <tr>
			<th>Completed</th>
      <th>Pending</th>
			<th>Registered</th>
    </tr>
  </thead>
  <tbody>
		<tr>
			<% count_by_status.each do |key, value| %>
				<td><%= value %></td>
			<% end %>
		</tr>
	</tbody>
</table>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id %></td>
        <td><%= link_to subject.name, subject_path(subject) %></td>
        <td><%= subject.status %></td>
        <td>
          <%= link_to 'Edit', edit_subject_path(subject), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', subject_path(subject), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_subject_path, class: 'btn btn-primary btn-large btn-large3 new_subject' %>
